<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Missionary Tutor 2016</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Content/JavaScript1.js"></script>
    <link href="~/Content/Site.css" rel="stylesheet" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color: blue;">
        <div class="container" style="background-color: blue;">
            <div class="navbar-header" >
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse" style="color: white;">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            @Html.ActionLink("Missionary Tutor", "Index", "Home", new { area = "" }, new { @class = "navbar-brand",@style="color: white;" }); 
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Missions", "Missions", "Home", new {@style="color: white;"})</li>
                    <li>@Html.ActionLink("About", "About", "Home", new  {@style="color: white;"})</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home", new {@style="color: white;"})</li>
                </ul>
                @Html.Partial("_LoginPartial", new { @style = "color: white" });
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Missionary Tutor</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
